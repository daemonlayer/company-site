---
import Container from "@components/container.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import gdprImage from "../assets/gdpr-compliant.jpeg";
import euHostedImage from "../assets/eu-hosted.png";

const { margin } = Astro.props;

const footermenu = {
  company: [
    {
      title: "About",
      path: "/about",
    },
    {
      title: "Blog",
      path: "/blog",
    },
    {
      title: "Contact",
      path: "/contact",
    },
  ],
  product: [
    {
      title: "Features",
      path: "#",
    },
    {
      title: "Pricing",
      path: "/pricing",
    },
    {
      title: "Integrations",
      path: "#",
    },
  ],
  // resources: [
  //   {
  //     title: "Help Center",
  //     path: "#",
  //   },
  //   {
  //     title: "Guides",
  //     path: "#",
  //   },
  //   {
  //     title: "Documentation",
  //     path: "#",
  //   },
  //   {
  //     title: "Uptime Status",
  //     path: "#",
  //   },
  // ],
};
---

<footer
  class:list={[
    "py-14 bg-slate-100 border-t border-slate-100",
    margin && "mt-10",
  ]}>
  <Container>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      <div class="sm:col-span-2 md:col-span-3 lg:col-span-2">
        <a href="/" class="text-lg flex items-center">
          <span class="font-bold text-brand">DaemonLayer</span>
        </a>
        <p class="mt-4 text-sm text-slate-700 max-w-xs">
          Building the next generation of IT support automation for MSPs. Reduce ticket noise, eliminate repetitive tasks, and deliver faster, calmer service.
        </p>
        <div class="flex gap-3 mt-4 items-center">
          <a
            href="http://twitter.com/daemonlayer"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-slate-200 hover:bg-slate-300 rounded w-6 h-6 inline-flex items-center justify-center text-slate-500">
            <Icon name="bx:bxl-twitter" class="w-4 h-4" />
            <span class="sr-only">Twitter or X</span></a
          >
          <a
            href="https://www.linkedin.com/company/daemonlayer"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-slate-200 hover:bg-slate-300 rounded w-6 h-6 inline-flex items-center justify-center text-slate-500">
            <Icon name="bx:bxl-linkedin-square" class="w-4 h-4" /><span
              class="sr-only">Linkedin</span
            ></a
          >
        </div>

        <!-- GDPR & EU Data Compliance Badges -->
        <div class="flex gap-4 mt-4 items-center">
          <div class="flex items-center gap-2">
            <Image
              src={gdprImage}
              alt="GDPR Compliant"
              width={40}
              height={40}
              class="w-10 h-10 rounded-full object-cover"
            />
            <span class="text-xs font-medium text-slate-600 leading-tight">
              GDPR<br/>Compliant
            </span>
          </div>
          <div class="flex items-center gap-2">
            <Image
              src={euHostedImage}
              alt="EU Data Storage"
              width={40}
              height={40}
              class="w-10 h-10 rounded-full object-cover"
            />
            <span class="text-xs font-medium text-slate-600 leading-tight">
              EU DATA<br/>STORAGE
            </span>
          </div>
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-slate-800">Company</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.company.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-slate-600 hover:text-brand">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-slate-800">Product</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.product.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-slate-600 hover:text-brand">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </Container>

  <div class="mt-14 pt-8 px-5 border-t border-slate-200">
    <Container>
      <p class="text-center text-sm text-slate-600 [text-wrap:balance]">
        Copyright © {new Date().getFullYear()} DaemonLayer. All rights reserved.
      </p>
      <p class="text-center text-xs text-slate-600 mt-2">
        <a href="/terms" class="hover:text-brand"> Terms</a> ・ <a
          href="/privacy"
          class="hover:text-brand">
          Privacy</a
        >
      </p>
    </Container>
  </div>
</footer>
